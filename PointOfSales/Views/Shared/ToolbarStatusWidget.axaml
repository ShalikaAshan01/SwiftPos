<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PointOfSales.Views.Shared.ToolbarStatusWidget"
             Height="110">

    <Border Background="#1E1E1E"
            CornerRadius="12"
            Padding="12"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="8">
        <StackPanel Spacing="6" VerticalAlignment="Center">

            <!-- Location Code -->
            <TextBlock Text="Location: SWF01"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,6"/>

            <!-- Connectivity Status Items - horizontal StackPanel -->
            <StackPanel Orientation="Horizontal" Spacing="16">
                <!-- Local DB -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="LimeGreen" VerticalAlignment="Center"/>
                    <TextBlock Text="Local DB" 
                               Foreground="White" 
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Outlet DB -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="LimeGreen" VerticalAlignment="Center"/>
                    <TextBlock Text="Outlet DB" 
                               Foreground="White" 
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Server -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="Orange" VerticalAlignment="Center"/>
                    <TextBlock Text="Server" 
                               Foreground="White" 
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
