<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PointOfSales.Views.Shared.LoginPopUp">
    <StackPanel>
        <TextBlock Text="Please log in" FontWeight="Bold"/>
        <TextBox x:Name="UsernameBox" Watermark="Username"/>
        <TextBox x:Name="PasswordBox" Watermark="Password"/>
        <Button Content="Login" Click="Login_Click"/>
    </StackPanel>
</UserControl>
