<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="https://github.com/projektanker/icons.avalonia"
             xmlns:local="clr-namespace:PointOfSales.Views.UserControls.BackOffice"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Height="40"
             x:Class="PointOfSales.Views.UserControls.BackOffice.SideBarItem"
             x:DataType="local:SideBarItem"
             >
    
    <Border x:Name="RootBorder"
            Background="{DynamicResource BackgroundBrush}"
            CornerRadius="6"
            Padding="8"
            Cursor="Hand">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
            <avalonia:Icon Value="{Binding Icon}" Width="20" Height="20" Foreground="{Binding IconForeground}" />

            <TextBlock Text="{Binding Title}"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="{Binding TitleFontWeight}"
                       Foreground="{Binding TextForeground}" />

            <!-- Notification Badge -->
            <Border Background="#D1D5DB" CornerRadius="12" Padding="4 0" MinWidth="20" Height="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="{Binding HasNotification}">
                <TextBlock Text="{Binding NotificationCount}"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Border>
        </StackPanel>
    </Border>
</UserControl>