<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:backOffice="clr-namespace:PointOfSales.Views.UserControls.BackOffice"
             xmlns:user="clr-namespace:PointOfSales.Views.UserControls.BackOffice.User"
             xmlns:logs="clr-namespace:PointOfSales.Views.UserControls.BackOffice.Logs"
             x:Class="PointOfSales.Views.UserControls.BackOffice.BackOffice">

    <Grid Background="{DynamicResource ThemeBackgroundBrush}" ColumnDefinitions="250,2,*">
        <!-- Sidebar -->
        <backOffice:BackOfficeSideBar Grid.Column="0"/>

        <!-- Divider -->
        <Border Grid.Column="1" Background="{DynamicResource ThemeBorderBrush}" Width="0.7"/>

        <!-- Main Content -->
        <!-- <user:UserListView Grid.Column="2"/> -->
        <logs:ActivityLogViewer Grid.Column="2" />
    </Grid>
</UserControl>