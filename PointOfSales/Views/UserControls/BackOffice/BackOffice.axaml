<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:backOffice="clr-namespace:PointOfSales.Views.UserControls.BackOffice"
             xmlns:logs="clr-namespace:PointOfSales.Views.UserControls.BackOffice.Logs"
             x:Class="PointOfSales.Views.UserControls.BackOffice.BackOffice">

    <Grid Background="{DynamicResource ThemeBackgroundBrush}" ColumnDefinitions="250,2,*">
        <!-- Sidebar -->
        <backOffice:BackOfficeSideBar Grid.Column="0"/>

        <!-- Divider -->
        <Border Grid.Column="1"
                Background="{DynamicResource ThemeBorderBrush}"
                Width="0.7"/>

        <!-- Main Content Area -->
        <Grid Grid.Column="2" RowDefinitions="Auto,*" Margin="12">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,12,12,0"
                        Spacing="10">

                <!-- Rounded Rectangle with "U" -->
                <Border Width="40"
                        Height="40"
                        Background="#888"
                        CornerRadius="8"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="U"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextAlignment="Center" />
                </Border>

                <!-- User Info -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Admin User"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ThemeForegroundBrush}" />
                    <TextBlock Text="Administrator"
                               FontSize="12"
                               Foreground="{DynamicResource ThemeForegroundBrush}" />
                </StackPanel>
            </StackPanel>

            <!-- Main Content -->
            <logs:ActivityLogViewer Grid.Row="1" />
        </Grid>
    </Grid>
</UserControl>
