<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PointOfSales.ViewModels"
             xmlns:shared="clr-namespace:PointOfSales.Views.Shared"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PointOfSales.Views.UserControls.Onboarding"
             x:DataType="viewModels:OnboardingViewModel">

    <Grid>
        
        <shared:ClockWidget HorizontalAlignment="Right" VerticalAlignment="Top"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="24">
            <!-- Company Logo -->
            <Border Margin="0,24,0,0" Width="150" HorizontalAlignment="Center" CornerRadius="12">
                <shared:CompanyLogo />
            </Border>

            <!-- Company Name -->
            <TextBlock Text="Swift Technologies (Pvt) Ltd"
                       FontSize="18"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Foreground="#444"/>

            <!-- User Info -->
            <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- User Image Placeholder -->
                <Border Width="64" Height="64" CornerRadius="32" Background="#DDD" ClipToBounds="True">
                    <shared:Logo Width="64" Height="64"/>
                </Border>

                <!-- Username -->
                <StackPanel VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="Welcome back," 
                               FontSize="16" 
                               Foreground="#666"
                               HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding DisplayName}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#333"
                               HorizontalAlignment="Left"/>
                </StackPanel>
            </StackPanel>

            <!-- Instruction -->
            <TextBlock Text="Please choose an action to continue"
                       FontSize="14"
                       Foreground="#666"
                       HorizontalAlignment="Center" />

            <!-- Primary Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
                <Button Content="POS"
                        MinWidth="120"
                        Background="#007BFF"
                        Foreground="White"
                        FontWeight="Bold"
                        CornerRadius="8"/>

                <Button Content="Back Office"
                        MinWidth="140"
                        Background="#28A745"
                        Foreground="White"
                        FontWeight="Bold"
                        CornerRadius="8"/>
            </StackPanel>

            <!-- Secondary Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <Button Content="Start Shift"
                        MinWidth="110"
                        Background="#17A2B8"
                        Foreground="White"
                        FontSize="13"
                        CornerRadius="6"/>

                <Button Content="End Shift"
                        MinWidth="110"
                        Background="#FFC107"
                        Foreground="White"
                        FontSize="13"
                        CornerRadius="6"/>

                <Button Content="Sign Off"
                        MinWidth="110"
                        Background="#DC3545"
                        Foreground="White"
                        FontSize="13"
                        CornerRadius="6"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
